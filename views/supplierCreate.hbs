<div class="card">
    <form class="form" action="/create/createSupplier" method="post">
        <div class="form-page-container">
            <div class="form-page">
                <div class="form-row">
                    <div class="text-field-container">
                        <div class="field-label-container">
                            <label class="field-label" for="name">Name</label>
                            <span class="error-text">*Required</span>
                        </div>
                        <input type="text" id="name" class="text-field" name="name" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="text-field-container">
                        <div class="field-label-container">
                            <label class="field-label" for="contact-info">Contact information</label>
                            <span class="error-text">*Required</span>
                        </div>
                        <input type="text" id="contact-info" class="text-field" name="contact-info" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="text-field-container">
                        <div class="field-label-container">
                            <label class="field-label" for="description">Description</label>
                            <span class="error-text">*Required</span>
                        </div>
                        <textarea id="description" class="text-field" name="description" rows="6" required></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-controls">
            <button type="submit" class="fg-button button" id="form-submit-button">
                <div class="button-wrapper">
                    <i class="lni lni-plus"></i>
                    <p>Add</p>
                </div>
            </button>
        </div>
    </form>
</div>