<div class="modal-container modal-container-hidden" id="modal-container-delete">
    <div class="modal modal-hidden" id="modal-details-delete">
        <h2 class="modal-header header">Delete event?</h2>
        <p class="modal-description">The event will be deleted and will<br>not show up in any records</p>
        <div class="modal-controls">
            <button class="bg-button button" id="cancel-modal-no-button">
                <div class="button-wrapper">
                    <i class="lni lni-check"></i>
                    <p>Keep event</p>
                </div>
            </button>
            <form action="/deleteEvent?id={{event._id}}" method="post">
                <button class="destructive-button button" id="delete-modal-yes-button">
                    <div class="button-wrapper">
                        <i class="lni lni-trash-3"></i>
                        <p>Delete</p>
                    </div>
                </button>
            </form>
        </div>
    </div>
</div>

<div class="modal-container modal-container-hidden" id="modal-container-cancel">
    <div class="modal modal-hidden" id="modal-details-cancel">
        <h2 class="modal-header header">Cancel event?</h2>
        <p class="modal-description">The event will be cancelled, you can <br>still view event in past events</p>
        <div class="modal-controls">
            <button class="bg-button button" id="cancel-modal-no-button">
                <div class="button-wrapper">
                    <i class="lni lni-check"></i>
                    <p>Keep event</p>
                </div> 
            </button>
            <form action="/cancelEvent?id={{event._id}}" method="POST">
                <button class="destructive-button button" id="cancel-modal-yes-button">
                    <div class="button-wrapper">
                        <i class="lni lni-xmark"></i>
                        <p>Cancel</p>
                    </div>
                </button>
            </form>
        </div>
    </div>
</div>

<div class="page-title-bar">
    <button class="back-link" id="backLink">
        <span class="button-wrapper">
            <i class="lni lni-arrow-left"></i>
        </span>
    </button>
    <h2 class="header">Event Details</h2>
</div>
    <div class="event-details card">
        {{#if showButtons}}
        <div class="event-controls">
            <button class="bg-button button" id="attendance-check-button">
                <a class="button-wrapper" href="/eventAttendance?id={{event._id}}">
                    <i class="lni lni-clipboard"></i>
                    <p>Attendance</p>
                </a>
            </button>

            <button class="bg-button button" id="details-edit-button">
                <a class="button-wrapper" href="/editEvent?id={{event._id}}">
                    <i class="lni lni-pencil-1"></i>
                    <p>Edit</p>
                </a>
            </button>
            
            <button type="button" class="destructive-button button" id="details-delete-button" data-event-id="{{event._id}}">
                <span class="button-wrapper">
                    <i class="lni lni-trash-3"></i>
                    <p>Delete</p>
                </span>
            </button>
        </div>
        {{/if}}

    <div class="event-box-top" id="details-top-box">
        <span id="event-name">{{event.eventName}}</span>
        <span id="status">{{event.status}}</span>
    </div>
    <span id="client-name">{{event.clientFirstName}} {{event.clientLastName}}</span>

    <div class="event-box-bottom" id="details-box">
        <div class="card-description-item">
            <i class="lni lni-calendar-days card-secondary"></i>
            <span class="card-header card-secondary">Date</span>
            <span id="date">{{event.eventDate}} to {{#if event.eventEndDate}} {{event.eventEndDate}} {{else}} {{event.eventDate}} {{/if}}</span>
        </div>
        <div class="card-description-item">
            <i class="lni lni-map-pin-5 card-secondary"></i>
            <span class="card-header card-secondary">Location</span>
            <a href="https://www.google.com/maps/search/?api=1&query={{event.location}}" id="location">{{event.location}}</a>
        </div>
        <div class="card-description-item">
            <i class="lni lni-phone"></i>
            <span class="card-header card-secondary">Contact Person</span>
            <span id="contact-name">{{event.CPFirstName}} {{event.CPLastName}}</span>
            <a href="tel:{{event.CPContactNo}}" id="contact-info">{{event.CPContactNo}}</a>
        </div>
        <span id="description-span">
            <div class="card-description-item">
                <i class="lni lni-pen-to-square"></i>
                <span class="card-header card-secondary">Description</span>
            </div>
            <div class="card-description-item">
                <span id="description">{{event.description}}</span>
            </div>
        </span>
    </div>
    <div class="team-members">
        <div class="grid-container">
            <form role="search" class="search-bar" onsubmit="return false;">
                <button type="submit"><i class="lni lni-search-1"></i></button>
                    <input type="search" name="q" id="searchInput" placeholder="Search..." autocomplete="off">
                </form>
            <h3 class="secondary-header">Team Members</h3>
            <div class="grid-controls">
            </div>
            <div class="team-mini-grid" id="participantGrid">
                {{#if teamMembers.length}}
                    {{#each teamMembers}}
                    {{> teamMemberMini this}}
                    {{/each}}
                {{else}}
                    <p>Currently no members in this event.</p>
                {{/if}}
            </div>

            <h3 class="secondary-header">Suppliers</h3>
            <div class="team-mini-grid" id="supplierGrid">
                {{#if supplierList.length}}
                    {{#each supplierList}}
                    {{> supplierMini this}}
                    {{/each}}
                {{else}}
                    <p>Currently no suppliers in this event.</p>
                {{/if}}
            </div>
        </div>
    <script>
    const teamId = '{{team._id}}';
    </script>

    <script>
        const searchInput = document.getElementById('searchInput');
        const participantGrid = document.getElementById('participantGrid');
        const supplierGrid = document.getElementById('supplierGrid');

        const originalParticipantContent = participantGrid.innerHTML;
        const originalSupplierContent = supplierGrid.innerHTML;

        function debounce(fn, delay) {
            let timeout;
            return function (...args) {
                clearTimeout(timeout);
                timeout = setTimeout(() => fn.apply(this, args), delay);
            };
        }

        async function fetchEventParticipants(query) {
            try {
                const response = await fetch(`/searchEventParticipants?q=${encodeURIComponent(query)}&id=${teamId}`);
                const data = await response.json();
                const { members, suppliers } = data;

                // Clear both containers
                participantGrid.innerHTML = '';
                supplierGrid.innerHTML = '';

                // Handle empty team member results
                if (members.length === 0) {
                    participantGrid.innerHTML = '<p>No matching team members found.</p>';
                }

                // Handle empty supplier results
                if (suppliers.length === 0) {
                    supplierGrid.innerHTML = '<p>No matching suppliers found.</p>';
                }


                // Render team members
                members.forEach(participant => {
                    const button = document.createElement('button');
                    button.className = 'team-member-mini-card';
                    button.setAttribute('type', 'button');
                    button.setAttribute('data-id', participant._id);
                    button.setAttribute('data-firstName', participant.firstName || '');
                    button.setAttribute('data-lastName', participant.lastName || '');
                    button.setAttribute('data-email', participant.email || '');
                    button.setAttribute('data-role', participant.role || 'Team Member');
                    button.setAttribute('data-bio', participant.bio || '');

                    button.innerHTML = `
                        <img class="team-member-mini-picture" src="/api/avatar/${member._id}" />
                        <span id="full-name">${participant.firstName ?? ''} ${participant.lastName ?? ''}</span>
                        <span id="role">${participant.role || 'Team Member'}</span>
                        <i id="teamMiniAddButton" class="lni lni-plus"></i>
                        <i id="teamMiniRemoveButton" class="lni lni-xmark"></i>
                    `;

                    participantGrid.appendChild(button);
                });

                // Render suppliers
                suppliers.forEach(supplier => {
                    const card = document.createElement('div');
                    card.className = 'team-member-mini-card';
                    card.innerHTML = `
                        <div class="team-member-mini-picture" style="background-image: url('')"></div>
                        <span id="full-name">${supplier.companyName}</span>
                        <span id="role">Supplier</span>
                        <i id="teamMiniAddButton" class="lni lni-plus"></i>
                        <i id="teamMiniRemoveButton" class="lni lni-xmark"></i>
                    `;
                    supplierGrid.appendChild(card);
                });

            } catch (err) {
                console.error('Search failed:', err);
                participantGrid.innerHTML = '<p>Error loading search results.</p>';
                supplierGrid.innerHTML = '';
            }
        }

        searchInput.addEventListener('input', debounce((e) => {
            const query = e.target.value.trim();
            if (query === '') {
                participantGrid.innerHTML = originalParticipantContent;
                supplierGrid.innerHTML = originalSupplierContent;
            } else {
                fetchEventParticipants(query);
            }
        }, 300));
    </script>
    </div>
</div>

