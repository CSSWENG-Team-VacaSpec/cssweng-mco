<button class="team-member-mini-card {{#if isSelf}} team-member-self{{/if}}"
    data-email="{{email}}"
    data-bio="{{bio}}"
    data-role="{{role}}"
    data-id="{{_id}}"
    data-firstName="{{firstName}}"
    data-lastName="{{lastName}}"
    data-status="{{status}}"
    type="button"
>
    <img class="team-member-mini-picture" src="/api/avatar/{{_id}}"></img>
    <span id="full-name">{{firstName}} {{lastName}}</span>
    <span id="role">{{role}}</span>
    <i id="teamMiniAddButton" class="lni lni-plus"></i>
    <i id="teamMiniRemoveButton" class="lni lni-xmark"></i>
</button>