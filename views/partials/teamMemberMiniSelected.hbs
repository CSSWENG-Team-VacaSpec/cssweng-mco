<button class="team-member-mini-card selected-team-member"
    data-email="{{email}}"
    data-bio="{{bio}}"
    data-role="{{role}}"
    data-id="{{_id}}"
    data-pfp="{{pfp}}"
    data-firstName="{{firstName}}"
    data-lastName="{{lastName}}"
    type="button"
>
    <div class="team-member-mini-picture" style="background-image: url('{{pfp}}');"></div>
    <span id="full-name">{{firstName}} {{lastName}}</span>
    <span id="role">{{role}}</span>
    <span id="contact-no">{{formatPhone _id}}</span>
    <i class="lni lni-xmark"></i>
</button>