<a href="/profile/{{_id}}" class="team-member-card card"
    data-email="{{email}}"
    data-bio="{{bio}}"
    data-role="{{role}}"
>
    <img class="team-member-picture" src="{{pfp}}"></img>
    <div class="team-member-details">
        <span id="full-name">{{firstName}} {{lastName}}</span>
        <span id="role">{{role}}</span>
        <span id="contact-no">{{formatPhone _id}}</span>
    </div>
</a>